<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:maps="clr-namespace:Xamarin.Forms.GoogleMaps;assembly=Xamarin.Forms.GoogleMaps"
             x:Class="SmartShop.View.ProductPage">
    <ContentPage.ToolbarItems>
        <ToolbarItem
            Order="Primary"
            Text="Back"
            Command="{Binding BackCommand}" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <ScrollView>
            <StackLayout
                BackgroundColor="White"
                Padding="10">
                <Image
                    Source="{Binding Product.Image}"
                    HeightRequest="200"
                    WidthRequest="200" />
                <Label
                    Text="{Binding Product.Name}"
                    HorizontalTextAlignment="Center" />
                <Label
                    Text="{Binding Product.Price, StringFormat='${0:F2}'}" />
                <Label
                    Text="{Binding Product.Seller}" />
                <Grid>
                    <Button
                        Text="Shop"
                        Command="{Binding ShopCommand}"
                        Grid.Column="0" />
                    <Button
                        Text="Save To List"
                        Command="{Binding SaveCommand}"
                        IsEnabled="{Binding IsEnabled}"
                        Grid.Column="1" />
                </Grid>
                <Label
                    Text="{Binding Product.Details}" />
                <maps:Map
                    x:Name="map"
                    InitialCameraUpdate="{Binding InitialCameraUpdate}"
                    MyLocationEnabled="True"
                    HasScrollEnabled="True"
                    WidthRequest="300"
                    HeightRequest="300" />
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>